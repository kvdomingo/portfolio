---
import type { CollectionEntry } from "astro:content";
import CvSectionElementMdx from "./CvSectionElementMdx.astro";

interface Props {
  title: string;
  data: CollectionEntry<"workExperience">[];
}

const { title, data } = Astro.props;
---

<div class="mb-12">
  <h3 class="text-xl">{title}</h3>

  <slot>
    <ul class="border-l border-gray-500">
      {data.map(d => <CvSectionElementMdx data={d} />)}
    </ul>
  </slot>
</div>
