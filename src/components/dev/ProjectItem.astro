---
import { CollectionEntry } from "astro:content";
import { buildCldUrl } from "@/utils/cloudinary";
import dateFormat from "dateformat";
import info from "@/info.json";
import TechBadge from "../icons/TechBadge.astro";

interface Props {
  project: CollectionEntry<"dev">;
}

const { technologies } = info.dev;

const { project } = Astro.props;

const { Content } = await project.render();
---

<div
  class="mb-8 grid grid-cols-1 place-content-start items-center gap-8 border-t border-solid border-slate-600 pt-8 md:grid-cols-2"
>
  <div>
    <a
      href={project.data.status === "archived" ? undefined : project.data.url}
      target="_blank"
      rel="noopener noreferrer"
    >
      <img
        src={buildCldUrl(project.data.cover)}
        alt={project.data.title}
        class="aspect-video h-[300px] w-auto object-cover"
      />
    </a>
  </div>

  <div>
    <div>
      <h4 class="text-xl">{project.data.title}</h4>
    </div>

    {
      project.data.organization && (
        <div class="my-4 flex place-items-center">
          <p>
            üåè
            <a
              href={project.data.organizationUrl}
              target="_blank"
              rel="noopener noreferrer"
            >
              {project.data.organization}
            </a>
          </p>
        </div>
      )
    }

    <p class="text-gray-400 small-caps">
      {dateFormat(new Date(project.data.startDate), "mmm yyyy")} -{" "}
      {
        project.data.endDate
          ? dateFormat(new Date(project.data.endDate), "mmm yyyy")
          : "present"
      }
    </p>

    <div class="my-8">
      <Content />
    </div>

    <div class="flex flex-wrap">
      {project.data.technologies.map(tech => <TechBadge name={tech} />)}
    </div>
  </div>
</div>
