---
import CvSectionElement from "./CvSectionElement.astro";

interface Props {
  title: string;
  data: Array<Record<string, string | null>>;
}

const { title, data } = Astro.props;
---

<div class="mb-12">
  <h3 class="text-xl">{title}</h3>

  <slot>
    <ul class="border-secondary border-l">
      {data.map(d => <CvSectionElement data={d} />)}
    </ul>
  </slot>
</div>
