---
import info from "@/info.json";
import BeforeAfter from "./react/BeforeAfter";
---

<section class="flex flex-col gap-12">
  <div>
    <h2 class="text-xl uppercase tracking-[0.5rem]">
      Video & Image Processing
    </h2>
    <div class="container">
      <p>{info.home.vip.text}</p>
    </div>
  </div>

  <div class="col-span-3 my-auto">
    <BeforeAfter client:only="react" />
  </div>

  <div>
    <a href="/svip" class="btn btn-outline btn-accent btn-wide">
      See in portfolio
    </a>
  </div>
</section>
