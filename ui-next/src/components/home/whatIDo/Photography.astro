---
import info from "@/info.json";
import Carousel from "./react/Carousel";

const text = info.home.photography.text.normalize();
---

<div class="grid gap-8 md:grid-cols-5 md:gap-36">
  <div class="col-span-2 my-auto flex flex-col items-start gap-8 text-left">
    <h3 class="text-3xl uppercase tracking-[0.5rem]">Photography</h3>
    <p>{text}</p>
    <a href="/photography" class="btn btn-outline btn-accent"
      >See in portfolio</a
    >
  </div>

  <div class="col-span-3 text-center">
    <Carousel client:only="react" />
  </div>
</div>
